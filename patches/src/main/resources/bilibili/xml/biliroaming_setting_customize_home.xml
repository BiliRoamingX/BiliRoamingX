<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.preference.PreferenceCategory
        android:title="@string/biliroaming_customize_home_summary"
        android:layout="@layout/bili_app_layout_preference_category_title">
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.CustomizeBottomFragment"
            android:key="customize_bottom"
            android:title="@string/biliroaming_customize_bottom_title" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.CustomizeHomeTabFragment"
            android:key="home_tab"
            android:title="@string/biliroaming_customize_home_tab_title"
            android:summary="@string/biliroaming_customize_home_tab_summary" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.FilterHomeRcmdFragment"
            android:key="filter_home_recommend"
            android:title="@string/biliroaming_filter_home_recommend_title" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.FilterPopularFragment"
            android:key="filter_popular"
            android:title="@string/biliroaming_filter_popular_title" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="disable_auto_refresh"
            android:title="@string/biliroaming_disable_auto_refresh_title"
            android:summary="@string/biliroaming_disable_auto_refresh_summary" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="block_recommend_guidance"
            android:title="@string/biliroaming_block_recommend_guidance_title"
            android:summary="@string/biliroaming_block_recommend_guidance_summary" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="add_bangumi"
            android:title="@string/biliroaming_add_bangumi_title"
            android:summary="@string/biliroaming_add_bangumi_summary" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="add_movie"
            android:title="@string/biliroaming_add_movie_title"
            android:summary="@string/biliroaming_add_movie_summary" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="add_korea"
            android:title="@string/biliroaming_add_korea_title"
            android:summary="@string/biliroaming_add_korea_summary" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="purify_game"
            android:title="@string/biliroaming_purify_game_title" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="block_top_activity"
            android:title="@string/biliroaming_block_top_activity_title" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="drawer"
            android:title="@string/biliroaming_drawer_title"
            android:summary="@string/biliroaming_drawer_summary" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="disable_main_page_story"
            android:title="@string/biliroaming_disable_main_page_story_title"
            android:summary="@string/biliroaming_disable_main_page_story_summary" />
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>
